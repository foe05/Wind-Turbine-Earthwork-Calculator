# Database
POSTGRES_DB=geo_engineering
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret

# Redis
REDIS_URL=redis://redis:6379

# JWT Auth
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Development Mode (set to false in production)
DEBUG=true

# Email (SMTP) - OPTIONAL for development
# Leave SMTP_HOST empty for dev mode - use /auth/dev/magic-links/{email} endpoint instead
# In production, configure SMTP to send real emails
SMTP_HOST=  # Empty = dev mode, or set to smtp.gmail.com for production
SMTP_PORT=587
SMTP_USER=  # your-email@gmail.com
SMTP_PASSWORD=  # your-app-password
SMTP_FROM_EMAIL=noreply@geo-engineering.example.com

# Magic Link
MAGIC_LINK_EXPIRATION_MINUTES=15
FRONTEND_URL=http://localhost:3000

# DEM Service
HOEHENDATEN_API_URL=https://api.hoehendaten.de:14444/v1/rawtif
DEM_CACHE_TTL_SECONDS=15552000
DEM_BUFFER_METERS=250

# S3 Storage (optional)
S3_BUCKET=geo-engineering-reports
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# Report Service
REPORT_EXPIRATION_DAYS=30

# Service URLs (internal)
AUTH_SERVICE_URL=http://auth_service:8001
DEM_SERVICE_URL=http://dem_service:8002
CALCULATION_SERVICE_URL=http://calculation_service:8003
COST_SERVICE_URL=http://cost_service:8004
REPORT_SERVICE_URL=http://report_service:8005
